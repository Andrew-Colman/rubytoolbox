.hero
  section.section: .container
    p.heading Category
    h2
      a href=category_path(@category)
        = @category.name

section.section: .container: .columns
  .projects
    - @category.projects.each do |project|
      .project
        header
          h3.is-size-4
            = project.permalink
          .column: .score
            span.icon
              i.fa.fa-flask
            span= project.score

        .columns: .column.description
          = project.description

        .metrics
          .label
            span &nbsp;
            strong
              | Popularity
          .column: .metrics
            .metric
              - if project.rubygem_downloads
                .heading
                  span.icon
                    i.fa.fa-download
                  | Downloads
                strong= number_with_delimiter project.rubygem_downloads
            .metric
              .heading
                span.icon
                  i.fa.fa-star
                | Stars
              strong= rand(3000)
            .metric
              .heading
                span.icon
                  i.fa.fa-code-fork
                | Forks
              strong= rand(500)
            .metric
              .heading
                span.icon
                  i.fa.fa-eye
                | Watchers
              strong= rand(100)
